@model Customer
<link href="~/BootstrapRtl/css/bootstrap-rtl.css" rel="stylesheet" />
<div class="container">
    <form method="post" asp-action="Update">
        <input asp-for="Customer_Id" type="hidden" />
        <div class="form-group">
            <label>نام</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label>نام خانوادگی</label>
            <input type="text" asp-for="Family" class="form-control">
            <span asp-validation-for="Family"></span>
        </div>
        <div class="form-group">
            <label>تاریخ تولد</label>
            <input type="datetime" asp-for="BirthDate" class="form-control">
            <span asp-validation-for="BirthDate"></span>
        </div>
        <div class="form-group">
            <label>محل تولد</label>
            <input type="text" asp-for="City" class="form-control">
            <span asp-validation-for="City"></span>
        </div>
        <div class="تعداد فرزند">
            <label>عنوان دوره</label>
            <input type="text" asp-for="Child" class="form-control">
            <span asp-validation-for="Child"></span>
        </div>
        <br/>
        <br/>
      
        <input type="submit" class="btn btn-success" value="ذخیره اطلاعات" />
    </form>

</div>

